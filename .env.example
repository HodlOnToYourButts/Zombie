# ZombieAuth Configuration
# Copy this file to .env and configure for your environment

# CouchDB Configuration
COUCHDB_USER=zombieauth
COUCHDB_PASSWORD=your-secure-password-here
COUCHDB_DATABASE=zombieauth
COUCHDB_URL=http://localhost:5984

# Instance Configuration
INSTANCE_ID=default
INSTANCE_LOCATION=unknown

# OIDC Configuration
ISSUER=http://localhost:3000

# ZombieAuth Security Configuration
ZOMBIEAUTH_JWT_SECRET=your-secure-jwt-secret-here
ZOMBIEAUTH_SESSION_SECRET=your-secure-session-secret-here
ZOMBIEAUTH_MODE=production

# Server Configuration
PORT=3000