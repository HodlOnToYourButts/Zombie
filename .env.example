# ZombieAuth Configuration
# Copy this file to .env and configure for your environment

# CouchDB Configuration
COUCHDB_USER=zombieauth
COUCHDB_PASSWORD=your-secure-password-here
COUCHDB_DATABASE=zombieauth
PRIMARY_COUCHDB_URL=http://localhost:5984

# Instance Configuration
INSTANCE_ID=default
INSTANCE_LOCATION=unknown

# OIDC Configuration
ISSUER=http://localhost:3000
DEFAULT_CLIENT_ID=zombieauth-default
ADMIN_CLIENT_SECRET=your-secure-client-secret-here

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-here
SESSION_SECRET=your-secure-session-secret-here

# Server Configuration
PORT=3000
NODE_ENV=production